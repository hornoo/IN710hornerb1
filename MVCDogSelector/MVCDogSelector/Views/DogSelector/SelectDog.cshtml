@model MVCDogSelector.Models.Dog

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>SelectDog</title>
</head>
<body>
    <div class="container">
        <div class="row">

            
             <div class="col-md-12 col-sm-12">
                <div class="jumbotron">
                    <h1>Dog Selector</h1>
                    <h2><small>We'll help you choose the perfect dog</small></h2>
                </div>
            </div>
            </div>
            <div class="row">

                <div class="col-md-6 col-sm-6">

                    <form action="Index" method="post">

                        <div class="form-group">
                            <label class="control-label">Must be good with children</label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="GoodWithChildren" id="GoodWithChildren1" value="True" checked>
                                    Yes
                                </label>
                            </div>

                            <div class="radio">
                                <label>
                                    <input type="radio" name="GoodWithChildren" id="GoodWithChildren2" value="False">
                                    no
                                </label>
                            </div>
                        </div>
                        <label class="control-label">Drooling</label>
                        <div class="radio">
                            <label>
                                <input type="radio" name="Drools" id="Drools1" value="True" checked>
                                No Drooling
                            </label>
                        </div>

                        <div class="radio">
                            <label>
                                <input type="radio" name="Drools" id="Drools2" value="False">
                                Don't mind
                            </label>
                        </div>


                        <label class="control-label">Coat length</label>
                        <div class="radio">
                            <label>
                                <input type="radio" name="Coatlength" id="Coatlength1" value="Short" checked>
                                Short
                            </label>
                        </div>

                        <div class="radio">
                            <label>
                                <input type="radio" name="Coatlength" id="Coatlength2" value="Medium">
                                Medium
                            </label>
                        </div>

                        <div class="radio">
                            <label>
                                <input type="radio" name="Coatlength" id="Coatlength3" value="Long">
                                Long
                            </label>
                        </div>

                </div>

                <div class="col-md-6 col-sm-6">

                    <label>Preferences</label>
                    <table class="table table-striped centerRadio ">
                        <tr><th></th><th>Low</th><th>Medium</th><th>High</th><th>No Preference</th></tr>
                        <tr>
                            <td>Activity Level</td>

                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="ActivityLevel" id="ActivityLevel1" value="Low" checked>

                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="ActivityLevel" id="ActivityLevel2" value="Medium">

                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="ActivityLevel" id="ActivityLevel3" value="High">

                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="ActivityLevel" id="ActivityLevel4" value="NoPreference">

                                    </label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Shedding Level</td>

                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="SheddingLevel" id="SheddingLevel1" value="Low" checked>

                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="SheddingLevel" id="SheddingLevel2" value="Medium">

                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="SheddingLevel" id="SheddingLevel3" value="High">

                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="SheddingLevel" id="SheddingLevel4" value="NoPreference">

                                    </label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Grooming Level</td>

                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="GroomingLevel" id="GroomingLevel1" value="Low" checked>

                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="GroomingLevel" id="GroomingLevel2" value="Medium">

                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="GroomingLevel" id="GroomingLevel3" value="High">

                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="GroomingLevel" id="GroomingLevel4" value="NoPreference">

                                    </label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Intelligence Level</td>

                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="IntelligenceLevel" id="IntelligenceLevel1" value="Low" checked>

                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="IntelligenceLevel" id="IntelligenceLevel2" value="Medium">

                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="IntelligenceLevel" id="IntelligenceLevel3" value="High">

                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="radio-inline">
                                    <label>
                                        <input type="radio" name="IntelligenceLevel" id="IntelligenceLevel4" value="NoPreference">

                                    </label>
                                </div>
                            </td>
                        </tr>

                    </table>

                    <label>Dog Size</label>

                    <select class="form-control" name="Size">
                        <option>Miniature</option>
                        <option>Small</option>
                        <option>Medium</option>
                        <option>Large</option>
                        <option>Giant</option>
                    </select>

                </div>
                </div>

            <div class="row">

                <div class="col-md-12 col-sm-12">

                    <br />
                    <button type="submit" class="btn btn-default btn-block">Find Dog</button>


                    </form>

                </div>
            </div>


            </div>

</body>
</html>